@model Book

<form method="post">
    <input asp-for="BookId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>  *@  @*--> this will list out all the error message at one place rather than showing at different places.*@
        @*<div asp-validation-summary="ModelOnly"></div>*@ @*-->this will show error regarding model only or we can say for any perticular field also*@
        @*<div asp-validation-summary="None"></div>*@   @*-->this will does not show any error through summary*@


        <div class="mb-3 p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>

        <div class="mb-3 p-1">
            <label asp-for="GenreId" class="p-0"></label>
            <input asp-for="GenreId" disabled class="form-control" value="@Model.Genre?.Name" />
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Pages" class="p-0"></label>
            <input asp-for="Pages" disabled class="form-control" />
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Books" asp-action="Index" class="btn btn-outline-secondary border-1 form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>
