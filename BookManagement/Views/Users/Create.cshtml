@model User

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New User</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>  @*--> this will list out all the error message at one place rather than showing at different places.*@
        @*<div asp-validation-summary="ModelOnly"></div>*@ @*-->this will show error regarding model only or we can say for any perticular field also*@
        @*<div asp-validation-summary="None"></div>*@   @*-->this will does not show any error through summary*@


        <div class="mb-3 p-1">
            <label asp-for="UserName" class="p-0"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>     @* to show validation error for a perticular field *@
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Phone" class="p-0"></label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary border-1 form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>


