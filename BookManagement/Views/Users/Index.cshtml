<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                User Details
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
        
    </div>

    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Contact Number
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.UserName</td>
                    <td>@obj.Email</td>
                    <td>@obj.Phone</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="BorrowRecords" asp-action="UserBorrowRecords" asp-route-userid="@obj.UserId" class="btn btn-outline-secondary mx-2">
                                Go To Borrow List
                            </a>
                            <a asp-controller="BorrowRecords" asp-action="BorrowBookByUserId" asp-route-userId="@obj.UserId" class="btn btn-outline-secondary mx-2">
                                Borrow Book
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.UserId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@obj.UserId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
